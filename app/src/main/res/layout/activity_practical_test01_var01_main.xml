<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01Var01MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="244dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp">

        <Button
            android:id="@+id/button_north"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:text="north" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_east"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="east" />

            <Button
                android:id="@+id/button_west"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="west" />
        </LinearLayout>

        <Button
            android:id="@+id/button_south"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:text="south" />

        <TextView
            android:id="@+id/textView_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/button_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="navigate to second activity" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>